<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rotation.view.RotationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_rotation_title"
        style="@style/Theme.Lilol.TextViewBase"
        android:text="@string/week_rotation"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rotation_main"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:barrierDirection="end"
        app:layout_constraintTop_toBottomOf="@+id/txt_rotation_title" />

    <TextView
        android:id="@+id/txt_rotation_title_two"
        style="@style/Theme.Lilol.TextViewBase" android:paddingTop="16dp"
        android:text="@string/week_rotation_two"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_rotation_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rotation_new_players"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/txt_rotation_title_two"
        tools:layout_editor_absoluteX="8dp" />

    <ProgressBar
        android:id="@+id/progress_rotation"
        style="@style/Theme.Lilol.TextViewBase"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_error_request"
        style="@style/Theme.Lilol.TextViewBase"
        android:text="@string/error_request"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>