<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/free_week_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="8dp"
        android:background="?attr/colorSurface"
        app:title="@string/free_week"
        app:titleCentered="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/rotation_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/TextAppearance.Material3.TitleSmall"
        app:tabTextColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/free_week_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/rotation_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rotation_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_height="600dp"
        tools:listitem="@layout/item_rotation_page" />

    <TextView
        android:id="@+id/text_error_request"
        style="@style/Theme.Lilol.TextViewBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/error_request"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/rotation_loading_placeholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:importantForAccessibility="no"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/free_week_toolbar"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:alpha="0.6"
            android:background="@drawable/bg_skeleton_block" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <View
            android:layout_width="220dp"
            android:layout_height="16dp"
            android:alpha="0.5"
            android:background="@drawable/bg_skeleton_block" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0.7"
            android:background="@drawable/bg_skeleton_block" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0.65"
            android:background="@drawable/bg_skeleton_block" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0.6"
            android:background="@drawable/bg_skeleton_block" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0.55"
            android:background="@drawable/bg_skeleton_block" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
